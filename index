    <h1>Create Your Business</h1>
    <button id="generateBtn">Generate Now</button>
    <div id="result"></div>

    <script>
        const businessData = {
            "Business model": {
                "description": "What type of customers you want to target with your business.",
                "options": ["🏠 Business to Customer", "🏢 Business to Business"]
            },
            "Revenue model": {
                "description": "How your business generates income, considering various pricing structures and sources.",
                "options": ["💳 Subscription", "📢 Advertising", "🤝 Commission", "🛍️ Product or Service Sales", "🎁 Freemium", "📈 Usage Based"]
            },
            "Technology": {
                "description": "Technology that drives your business operations, enhancing your products, services, and competitive edge.",
                "options": ["🤖 Artificial Intelligence", "⛓️ Blockchain", "🌐 Internet of Things", "🕶️ Virtual Reality", "🌍 Geolocation", "📱 Augmented Reality", "📊 Big Data", "💾 Digital Products", "🛍️ Marketplace", "🧠 Machine Learning", "🦾 Robotics", "🖨️ 3D Printing", "👥 Social Network", "🔒 Cybersecurity", "📡 Drones", "🤝 Collaborative Tools", "🌿 Green Technology", "🧬 Biotechnology"]
            },
            "Industry": {
                "description": "The industry where your business operate in.",
                "options": ["🖥️ Technology", "📚 Education", "💵 Finance", "🏥 Healthcare", "🏭 Manufacturing", "🏢 Real Estate", "🚗 Transportation", "🛒 Retail", "🍽️ Food", "🎨 Entertainment", "🏡 Home", "🌿 Environment"]
            },
            "Investment": {
                "description": "This is the initial investment required to launch or grow your business, ranging from low to high.",
                "options": ["💰 Low Initial Investment", "💼 Medium Initial Investment", "💸 High Initial Investment"]
            },
            "Competition": {
                "description": "The level of competition in your chosen market or industry, influencing pricing strategies and success.",
                "options": ["🐢 Low Competition", "🦊 Medium Competition", "🦁 High Competition"]
            },
            "Experience Level": {
                "description": "The expertise needed to run your business model, with options from beginner to advanced.",
                "options": ["🎓 Beginner", "🔧 Intermediate", "🚀 Advanced"]
            },
            "Environmental Impact": {
                "description": "The environmental impact of your business, reflecting your commitment to sustainability and ecological footprint.",
                "options": ["🌱 Low Impact", "⚖️ Medium Impact", "🏭 High Impact"]
            },
            "Regulatory Requirements": {
                "description": "The level of regulatory compliance your business will need, accounting for industry-specific rules and regulations.",
                "options": ["📋 Low Requirements", "📑 Medium Requirements", "📚 High Requirements"]
            }
        };

        function generateRandomBusiness() {
            let result = "";
            for (const [category, data] of Object.entries(businessData)) {
                const randomOption = data.options[Math.floor(Math.random() * data.options.length)];
                result += `
                    <div class="info-block">
                        <h3>${category}</h3>
                        <p>${data.description}</p>
                        <p><strong>${randomOption}</strong></p>
                    </div>
                `;
            }
            document.getElementById("result").innerHTML = result;
        }

        document.getElementById("generateBtn").addEventListener("click", generateRandomBusiness);
    </script>
